#!/bin/bash -ex

APP_ROOT=$(git rev-parse --show-toplevel)
cd "$APP_ROOT"

CONFIG_DIR="$1"
if [ -z "$CONFIG_DIR" ]; then
    cat <<EOS
$0 must specify build config directory
e.g.
    $0 builds/planet
    $0 builds/seattle
EOS
    exit 1
fi
shift

set -o nounset

if [ ! -d "$CONFIG_DIR" ]; then
    cat <<EOS
Config dir "$CONFIG_DIR" doesn't exist
EOS
    exit 1
fi

source "${CONFIG_DIR}/env.sh"

TRANSIT_CONFIG_DIR="$CONFIG_DIR/transit"

USE_LOCAL_PBF=""
INPUT_PBF="${HEADWAY_AREA}.osm.pbf"
if [[ -f $INPUT_PBF ]]; then
    USE_LOCAL_PBF="--local-pbf ${INPUT_PBF}"
fi

dagger --interactive -c "with-area ${HEADWAY_AREA} ${USE_LOCAL_PBF} | build-transit ${TRANSIT_CONFIG_DIR} | export 'data/${HEADWAY_AREA}/transit'"

