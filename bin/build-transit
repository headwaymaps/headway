#!/bin/bash -i

set -e

APP_ROOT=$(git rev-parse --show-toplevel)
cd "$APP_ROOT"

CONFIG_DIR="$1"
if [ -z "$CONFIG_DIR" ]; then
    cat <<EOS
$0 must specify build config directory
e.g.
    $0 builds/planet
    $0 builds/seattle
EOS
    exit 1
fi
shift

if [ ! -d "$CONFIG_DIR" ]; then
    cat <<EOS
Config dir "$CONFIG_DIR" doesn't exist
EOS
    exit 1
fi

set -o nounset

TRANSIT_CONFIG_DIR="$CONFIG_DIR/transit"

source "${CONFIG_DIR}/env.sh"

set -x
dagger --interactive -c "new | with-area ${HEADWAY_AREA} --local-pbf ${HEADWAY_AREA}.osm.pbf | build-transit ${TRANSIT_CONFIG_DIR} | export 'data/${HEADWAY_AREA}/transit'"
